<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fearlessbear.androidexperiment">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".view.EditTextKeyboardActivity"></activity>
        <activity android:name=".arch.paging.PagingListActivity" />
        <activity android:name=".view.ViewVisibilityListenActivity" />
        <activity android:name=".anr.AnrListActivity" />
        <activity android:name=".anr.InputAnrActivity" />
        <activity android:name=".foundation.file.FileBaseOpActivity" />
        <activity android:name="._base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity> <!-- Service -->
        <activity android:name=".components.service.ServiceListActivity" />
        <activity android:name=".components.service.SystemWindowActivity" /> <!-- Activity -->
        <activity android:name=".components.activity.ActivityListActivity" />
        <activity android:name=".components.activity.ActivityOptionsNo1Activity" />
        <activity android:name=".components.activity.FragmentLifeCircleActivity" />
        <activity android:name=".components.activity.ActivityLifeCircleActivity" />
        <activity android:name=".components.activity.ViewPageFragmentLifeCircleActivity" />
        <activity android:name=".components.activity.OptionsMenuActivity" /> <!-- Memory -->
        <activity android:name=".memory.MemoryListActivity" />
        <activity android:name=".memory.CheckOutAppHeapSizeActivity" /> <!-- View start -->
        <activity android:name=".view.ViewListActivity" />
        <activity android:name=".view.ImageSpanActivity" />
        <activity android:name=".components.activity.ActivityOptionsNo2Activity" />
        <activity android:name=".view.RightToLeftActivity" /> <!-- View end -->
        <!-- foundation start -->
        <activity android:name=".components.handler.MessageIdActivity" /> <!-- foundation end -->
        <!-- asset -->
        <activity android:name=".foundation.asset.AssetListActivity" />
        <activity android:name=".foundation.asset.StringPoolActivity" /> <!-- file -->
        <activity android:name=".foundation.file.FileListActivity" />
        <activity android:name=".foundation.file.SdcardActivity" /> <!-- launch mode -->
        <activity android:name=".launchmode.LaunchModeListActivity" />
        <activity android:name=".launchmode.SingleTaskActivity" />
        <activity android:name=".arch.ArchListActivity" />

        <provider
            android:name=".components.provider.paging.MyContentProvider"
            android:authorities="contentprovider" />
    </application>

</manifest>