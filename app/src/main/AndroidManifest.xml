<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fearlessbear.androidexperiment">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="._base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Service -->
        <activity android:name=".service.ServiceListActivity"/>
        <activity android:name=".service.SystemWindowActivity"/>

        <!-- Activity -->
        <activity android:name=".components.activity.ActivityListActivity"/>
        <activity android:name=".components.activity.ActivityOptionsNo1Activity"/>
        <activity android:name=".components.activity.FragmentLifeCircleActivity"/>

        <!-- Memory -->
        <activity android:name=".memory.MemoryListActivity"/>
        <activity android:name=".memory.CheckOutAppHeapSizeActivity"/>

        <!-- View -->
        <!-- TextView -->
        <activity android:name=".view.textview.ImageSpanActivity"/>
        <activity android:name=".components.activity.ActivityOptionsNo2Activity">
        </activity>
        <activity android:name=".components.handler.MessageIdActivity">
        </activity>

        <!-- foundation -->
        <!-- asset -->
        <activity android:name=".foundation.asset.AssetListActivity"/>
        <activity android:name=".foundation.asset.StringPoolActivity"/>
    </application>

</manifest>